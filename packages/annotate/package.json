{
	"name": "annotate",
	"version": "1.0.0",
	"description": "Performant annotation utils",
	"keywords": [],
	"author": "Alex Jeffcott",
	"license": "ISC",
	"main": "build/index.js",
	"types": "build/index.d.ts",
	"type": "module",
	"scripts": {
		"//base_scripts": "the building blocks of commandscripts go here",
		"clean": "rm -rf src/*.js src/**/*.js src/*.d.ts src/**/*.d.ts build",
		"emit": "tsc --declaration --emitDeclarationOnly --declarationMap --outDir build",
		"emit:dev": "npm run emit -- --watch",
		"build": "esbuild ./src/index.ts --bundle --outdir=build --sourcemap --format=esm --platform=node --target=node16",
		"build:dev": "npm run clean && npm run build -- --watch",
		"eslint": "eslint --ignore-path .gitignore --ext .ts --fix .",
		"types": "tsc --noEmit",
		"prettier": "prettier --ignore-path .gitignore --write .",
		"jscpd": "jscpd -t 16",
		"test": "mocha-esbuild **/*.test.ts --bail",
		"test:dev": "npm run test -- --watch",
		"setup": "printf \"NODE_ENV=DEVELOPMENT\" > .env",
		"//command_scripts": "the compositions of base_scripts go here",
		"lint": "npm run build && npm run types && npm run prettier && npm run eslint && npm run jscpd",
		"start": "concurrently \"npm:build:dev\" \"npm:emit:dev\" \"npm:test:dev\"",
		"test:cov": "npm run clean && npm run emit && npm run build && c8 --reporter=text --all --src=build npm run test"
	},
	"devDependencies": {
		"@rtvision/mocha-esbuild": "^0.1.8",
		"@types/chai": "^4.3.0",
		"@types/eslint": "^8.4.1",
		"@types/lodash.throttle": "^4.1.6",
		"@types/mocha": "^9.1.0",
		"@types/mocha-each": "^2.0.0",
		"@types/node": "^17.0.23",
		"@types/prettier": "^2.4.4",
		"@typescript-eslint/eslint-plugin": "^5.16.0",
		"@typescript-eslint/parser": "^5.16.0",
		"chai": "^4.3.6",
		"concurrently": "^7.0.0",
		"dotenv": "^16.0.0",
		"esbuild": "^0.14.29",
		"eslint": "^8.12.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-simple-import-sort": "^7.0.0",
		"jscpd": "^3.4.5",
		"mocha": "^9.2.2",
		"mocha-each": "^2.0.1",
		"prettier": "^2.6.1",
		"source-map-support": "^0.5.21",
		"typescript": "^4.6.3"
	},
	"dependencies": {
		"lodash.throttle": "^4.1.1"
	}
}
