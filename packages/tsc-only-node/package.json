{
	"name": "tsc-only-node",
	"version": "1.0.0",
	"description": "A bare-minimum node project using javascript modules, env-vars, a dev-server, static analysis and unit testing with Typescript",
	"keywords": [],
	"author": "Alex Jeffcott",
	"license": "ISC",
	"main": "build/src/index.js",
	"types": "build/types/index.d.ts",
	"type": "module",
	"scripts": {
		"//base_scripts": "the building blocks of commandscripts go here",
		"emit-types": "tsc --declaration --emitDeclarationOnly --outDir ./build/types",
		"clean": "rm -rf src/*.js src/**/*.js build",
		"build": "npm run clean && tsc",
		"build:dev": "npm run clean && tsc --watch",
		"run:dev": "nodemon --experimental-specifier-resolution=node -r source-map-support/register ./build/src",
		"run": "node --experimental-specifier-resolution=node -r source-map-support/register ./build/src",
		"eslint": "eslint --ignore-path .gitignore --ext .ts --fix .",
		"prettier": "prettier --ignore-path .gitignore --write .",
		"jscpd": "jscpd -t 16",
		"test": "mocha --bail --ui bdd --r source-map-support/register --experimental-specifier-resolution=node --recursive ./build/src/__tests__/**/*.test.js",
		"setup": "printf \"NODE_ENV=DEVELOPMENT\" > .env",
		"//command_scripts": "the compositions of base_scripts go here",
		"lint": "npm run prettier && npm run eslint && npm run jscpd",
		"start": "npm run build && npm run run",
		"start:dev": "concurrently \"npm:build:dev\" \"npm:run:dev\"",
		"test:nocov": "npm run clean && npm run build && npm run test",
		"test:cov": "npm run clean && npm run build && c8 --clean --reporter=text npm run test",
		"//ci": "ci only scripts can go here",
		"test:ci": "c8 --reporter=json-summary npm run test"
	},
	"dependencies": {
		"is-windows": "^1.0.2"
	},
	"devDependencies": {
		"@types/chai": "^4.3.1",
		"@types/eslint": "^8.4.1",
		"@types/is-windows": "^1.0.0",
		"@types/mocha": "^9.1.0",
		"@types/mocha-each": "^2.0.0",
		"@types/node": "^17.0.25",
		"@types/prettier": "^2.6.0",
		"@typescript-eslint/eslint-plugin": "^5.20.0",
		"@typescript-eslint/parser": "^5.20.0",
		"c8": "^7.11.0",
		"chai": "^4.3.6",
		"concurrently": "^7.1.0",
		"dotenv": "^16.0.0",
		"eslint": "^8.13.0",
		"eslint-config-prettier": "^8.5.0",
		"jscpd": "^3.4.5",
		"mocha": "^9.2.2",
		"mocha-each": "^2.0.1",
		"nodemon": "^2.0.15",
		"prettier": "^2.6.2",
		"source-map-support": "^0.5.21",
		"typescript": "^4.6.3"
	}
}
