{
	"name": "tsc-only-node",
	"version": "1.0.0",
	"description": "A bare-minimum node project using javascript modules, env-vars, a dev-server, static analysis and unit testing with Typescript",
	"keywords": [],
	"author": "Alex Jeffcott",
	"license": "ISC",
	"main": "build/index.js",
	"type": "module",
	"scripts": {
		"//base_scripts": "the building blocks of commandscripts go here",
		"clean": "rm -rf src/*.js src/**/*.js build",
		"build": "tsc",
		"build:dev": "npm run clean && tsc --watch",
		"run:dev": "nodemon --experimental-specifier-resolution=node -r source-map-support/register ./build",
		"run": "node --experimental-specifier-resolution=node -r source-map-support/register ./build",
		"eslint": "eslint --ignore-path .gitignore --ext .ts --fix .",
		"prettier": "prettier --ignore-path .gitignore --write .",
		"//command_scripts": "the compositions of base_scripts go here",
		"lint": "npm run prettier && npm run eslint",
		"start": "npm run build && npm run run",
		"start:dev": "concurrently \"npm:build:dev\" \"npm:run:dev\""
	},
	"dependencies": {
		"is-windows": "^1.0.2"
	},
	"devDependencies": {
		"@types/eslint": "^8.4.1",
		"@types/is-windows": "^1.0.0",
		"@types/node": "^17.0.19",
		"@types/prettier": "^2.4.4",
		"@typescript-eslint/eslint-plugin": "^5.14.0",
		"@typescript-eslint/parser": "^5.14.0",
		"concurrently": "^7.0.0",
		"eslint": "^8.10.0",
		"eslint-config-prettier": "^8.5.0",
		"nodemon": "^2.0.15",
		"prettier": "^2.5.1",
		"source-map-support": "^0.5.21",
		"typescript": "^4.5.5"
	}
}
